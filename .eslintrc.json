{
    "parser": "@typescript-eslint/parser",  
    "extends": [
      "eslint:recommended",                
      "plugin:@typescript-eslint/recommended" 
    ],
    "parserOptions": {
      "ecmaVersion": 2020,                  
      "sourceType": "module",               
      "project": "./tsconfig.json"          
    },
    "rules": {
      "no-console": "warn",                 
      "semi": ["error", "always"],          
      "quotes": ["error", "single"]       
    }
  }
  